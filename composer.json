{
  "name": "vrkansagara/matrix",
  "description": "This is simple package which work with matrix",
  "type": "library",
  "license": "BSD-3-Clause",
  "keywords": ["matrix"],
  "homepage": "https://vrkansagara.in",
  "support": {
    "email": "vrkansagara@gmail.com",
    "issues": "https://github.com/vrkansagara/matrix/issues",
    "source": "https://github.com/vrkansagara/matrix"
  },
  "authors": [
    {
      "name": "Vallabh Kansagara",
      "email": "vrkansagara@gmail.com"
    }
  ],
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0"
  },
  "require-dev": {
    "infection/infection": "^0.27.0",
    "mockery/mockery": "^1.5",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.2",
    "roave/security-advisories": "dev-latest",
    "sensiolabs/security-checker": "^6.0",
    "squizlabs/php_codesniffer": "4.0.x-dev",
    "vimeo/psalm": "^5.12"
  },
  "autoload": {
    "psr-4": {
      "Vrkansagara\\Matrix\\": "src/"
    },
    "files": [
      "src/Helpers/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Vrkansagara\\Matrix\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "scripts": {
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "php -S 0.0.0.0:8080 -t public"
    ],
    "permission": [
      "chmod 0775 -R $(pwd)/vendor",
      "chmod +x -R $(pwd)/vendor/bin"
    ],
    "cs-check": "./vendor/bin/phpcs -s",
    "cs-fix": "./vendor/bin/phpcbf --standard=$(pwd)/phpcs.xml",
    "test": [
      "./vendor/bin/phpunit --do-not-cache-result --testdox --colors=always --log-junit ./tests/build/logs/phpunit-test-log.xml",
      "echo 'Current head at ' && git rev-parse --verify HEAD"
    ],
    "security-check": [
      "./vendor/bin/security-checker security:check"
    ],
    "test-coverage": "phpunit --colors=always --coverage-clover ./tests/build/logs/coverage.xml",
    "test-mutation": [
      "export XDEBUG_MODE=coverage && ./vendor/bin/infection --only-covered --min-msi=80 --threads=4"
    ],
    "test-phpstan": [
      "./vendor/bin/phpstan analyse"
    ],
    "test-php-lint": [
      "find . -type f -name '*.php' -not -path \"*/vendor/*\" -print0 | xargs -0 -n1 -P4 php -l -n | (! grep -v \"No syntax errors detected\" )"
    ],
    "static-analysis": "vendor/bin/psalm --shepherd --stats",
    "check": [
      "@permission",
      "@cs-fix",
      "@cs-check",
      "@test"
    ]
  },
  "scripts-descriptions": {
    "cs-check": "Run coding standards checks.",
    "cs-fix": "Automatically fix coding standard issues.",
    "serve": "Start the built-in PHP web server and serve the application.",
    "test": "Run unit tests."
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
